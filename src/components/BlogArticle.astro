---
import '../styles/blog-article.css';

interface Props {
	title: string;
	date: string;
	category: string;
	categoryLink: string;
	image: string;
	readTime: string;
	ctaText?: string;
}

const {
	title,
	date,
	category,
	categoryLink,
	image,
	readTime,
	ctaText = "Nos experts sont la pour vous accompagner dans vos choix."
} = Astro.props;
---

<main>
	<!-- Article Hero - Image gauche, Titre droite -->
	<section class="article-hero">
		<div class="container">
			<div class="article-hero-grid">
				<div class="article-hero-image">
					<img src={image} alt={title} />
				</div>
				<div class="article-hero-content">
					<a href={categoryLink} class="article-category">{category}</a>
					<h1>{title}</h1>
					<div class="article-meta-info">
						<span class="article-date">Mis a jour le {date}</span>
						<span class="article-read-time">{readTime}</span>
					</div>
					<div class="article-share">
						<span>Partager cet article</span>
						<div class="share-buttons">
							<a href="#" class="share-btn facebook" aria-label="Partager sur Facebook">
								<svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
							</a>
							<a href="#" class="share-btn twitter" aria-label="Partager sur Twitter">
								<svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/></svg>
							</a>
							<a href="#" class="share-btn linkedin" aria-label="Partager sur LinkedIn">
								<svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Article Content -->
	<article class="article-content">
		<div class="container">
			<div class="article-wrapper">
				<div class="article-body">
					<slot name="content" />
				</div>

				<!-- Sidebar -->
				<aside class="article-sidebar">
					<div class="sidebar-card">
						<h4>Articles de la meme categorie</h4>
						<ul class="related-articles">
							<slot name="sidebar" />
						</ul>
					</div>

					<div class="sidebar-card sidebar-cta">
						<h4>Besoin de conseils ?</h4>
						<p>{ctaText}</p>
						<a href="/contact" class="btn btn-primary">Nous contacter</a>
					</div>
				</aside>
			</div>
		</div>
	</article>
</main>
