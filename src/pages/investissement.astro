---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const articles = [
	{
		title: "Placement pour la retraite : comment préparer vos revenus futurs",
		date: "14 novembre 2025",
		href: "/blog/placements-retraite",
		image: "https://cdn.prod.website-files.com/679ce3ae6891cff458859b15/691717b4d267988c916539f1_pexels-artempodrez-5716001-p-1600.jpg"
	},
	{
		title: "Prêt viager hypothécaire : une solution de financement flexible pour les seniors",
		date: "7 novembre 2025",
		href: "/blog/pret-viager-hypothecaire",
		image: "https://cdn.prod.website-files.com/679ce3ae6891cff458859b15/68c3e52472fc1a3936579ce9_pret%20viager%20hypoth%C3%A9caire.png"
	},
	{
		title: "Prêt immobilier pour seniors : guide complet et conseils utiles",
		date: "7 novembre 2025",
		href: "/blog/pret-immobilier-senior",
		image: "https://cdn.prod.website-files.com/679ce3ae6891cff458859b15/6814e6fe091dedd9d3b5fbaa_68064f3d6025c7bb4049d989_Immeuble%2520construction.png"
	},
	{
		title: "Prêt immobilier après 70 ans : nos conseils pour réussir",
		date: "25 juillet 2025",
		href: "/blog/pret-immobilier-apres-70-ans",
		image: "https://cdn.prod.website-files.com/679ce3ae6891cff458859b15/6814e6feaa0a1c1ae7822206_680656556460ecf616bdb8a4_Senior%2520maison%25203.png"
	}
];
---

<Layout title="Investissement - Retraite Libre">
	<Header />
	<main>
		<!-- Hero Section -->
		<section class="page-hero">
			<div class="container">
				<h1>Investissement</h1>
				<p>Tous nos contenus sur l'investissement</p>
			</div>
		</section>

		<!-- Articles Grid -->
		<section class="articles-section">
			<div class="container">
				<div class="articles-grid">
					{articles.map(article => (
						<a href={article.href} class="article-card">
							<div class="article-image">
								<img src={article.image} alt={article.title} />
							</div>
							<div class="article-content">
								<span class="article-date">{article.date}</span>
								<h3>{article.title}</h3>
								<span class="article-link">Lire l'article →</span>
							</div>
						</a>
					))}
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.page-hero {
		background: var(--bg-light);
		padding: 60px 0;
		text-align: center;
	}

	.page-hero h1 {
		font-size: 42px;
		margin-bottom: 15px;
		color: var(--text-dark);
	}

	.page-hero p {
		font-size: 18px;
		color: var(--text-light);
	}

	.articles-section {
		padding: 60px 0;
		background: var(--bg-white);
	}

	.articles-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 30px;
	}

	.article-card {
		background: var(--bg-white);
		border-radius: 16px;
		overflow: hidden;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
		transition: all 0.3s ease;
	}

	.article-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
	}

	.article-image {
		height: 200px;
		overflow: hidden;
	}

	.article-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.article-card:hover .article-image img {
		transform: scale(1.05);
	}

	.article-content {
		padding: 25px;
	}

	.article-date {
		font-size: 13px;
		color: var(--text-light);
		margin-bottom: 10px;
		display: block;
	}

	.article-content h3 {
		font-size: 18px;
		margin-bottom: 15px;
		line-height: 1.4;
		color: var(--text-dark);
	}

	.article-link {
		color: var(--primary-blue);
		font-weight: 600;
		font-size: 14px;
	}

	@media (max-width: 992px) {
		.articles-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 576px) {
		.articles-grid {
			grid-template-columns: 1fr;
		}

		.page-hero h1 {
			font-size: 32px;
		}
	}
</style>
