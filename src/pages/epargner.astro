---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const articles = [
	{
		title: "Prévoyance retraite : comment bien anticiper et protéger son avenir ?",
		date: "7 novembre 2025",
		href: "/blog/prevoyance-retraite",
		image: "https://cdn.prod.website-files.com/679ce3ae6891cff458859b15/68c3dfd00f69cfc50bae29d5_prevoyance%20retraite.png"
	},
	{
		title: "PEL ou PER : Quel investissement choisir pour 2025 ?",
		date: "25 juillet 2025",
		href: "/blog/pel-ou-per",
		image: "https://cdn.prod.website-files.com/679ce3ae6891cff458859b15/68064d19a3b70db1dbbb8445_Personne%20%C3%A2g%C3%A9.png"
	},
	{
		title: "Les enjeux du crédit après 70 ans",
		date: "13 janvier 2026",
		href: "/blog/emprunter-apres-70-ans",
		image: "https://cdn.prod.website-files.com/679ce3ae6891cff458859b15/67fa4e817642747547911f6a_Senior%20terrasse.png"
	},
	{
		title: "Les meilleurs placements pour optimiser votre retraite financière",
		date: "25 juillet 2025",
		href: "/blog/meilleurs-placement-pour-la-retraite",
		image: "https://cdn.prod.website-files.com/679ce3ae6891cff458859b15/67fa4c065a584206e89a5618_Senior%20comptable.png"
	},
	{
		title: "Cumul retraite et RSA : peut-on effectivement cumuler ?",
		date: "13 janvier 2026",
		href: "/blog/cumuler-retraite-rsa",
		image: "https://cdn.prod.website-files.com/679ce3ad6891cff458859ab4/67f8d6f0b17c6fcf7bb7e49b_Banniere%20site.png"
	},
	{
		title: "Comment optimiser vos revenus à la retraite",
		date: "25 juillet 2025",
		href: "/blog/augmenter-sa-retraite",
		image: "https://cdn.prod.website-files.com/679ce3ad6891cff458859ab4/67f8d6f0b17c6fcf7bb7e49b_Banniere%20site.png"
	},
	{
		title: "Ouvrir un PER à la retraite : Guide pratique",
		date: "7 novembre 2025",
		href: "/blog/ouvrir-per-retraite",
		image: "https://cdn.prod.website-files.com/679ce3ad6891cff458859ab4/67f8d6f0b17c6fcf7bb7e49b_Banniere%20site.png"
	}
];
---

<Layout title="Epargner - Retraite Libre">
	<Header />
	<main>
		<!-- Hero Section -->
		<section class="page-hero">
			<div class="container">
				<h1>Epargner</h1>
				<p>Tous nos contenus sur l'épargne</p>
			</div>
		</section>

		<!-- Articles Grid -->
		<section class="articles-section">
			<div class="container">
				<div class="articles-grid">
					{articles.map(article => (
						<a href={article.href} class="article-card">
							<div class="article-image">
								<img src={article.image} alt={article.title} />
							</div>
							<div class="article-content">
								<span class="article-date">{article.date}</span>
								<h3>{article.title}</h3>
								<span class="article-link">Lire l'article →</span>
							</div>
						</a>
					))}
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.page-hero {
		background: var(--bg-light);
		padding: 60px 0;
		text-align: center;
	}

	.page-hero h1 {
		font-size: 42px;
		margin-bottom: 15px;
		color: var(--text-dark);
	}

	.page-hero p {
		font-size: 18px;
		color: var(--text-light);
	}

	.articles-section {
		padding: 60px 0;
		background: var(--bg-white);
	}

	.articles-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 30px;
	}

	.article-card {
		background: var(--bg-white);
		border-radius: 16px;
		overflow: hidden;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
		transition: all 0.3s ease;
	}

	.article-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
	}

	.article-image {
		height: 200px;
		overflow: hidden;
	}

	.article-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.article-card:hover .article-image img {
		transform: scale(1.05);
	}

	.article-content {
		padding: 25px;
	}

	.article-date {
		font-size: 13px;
		color: var(--text-light);
		margin-bottom: 10px;
		display: block;
	}

	.article-content h3 {
		font-size: 18px;
		margin-bottom: 15px;
		line-height: 1.4;
		color: var(--text-dark);
	}

	.article-link {
		color: var(--primary-blue);
		font-weight: 600;
		font-size: 14px;
	}

	@media (max-width: 992px) {
		.articles-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 576px) {
		.articles-grid {
			grid-template-columns: 1fr;
		}

		.page-hero h1 {
			font-size: 32px;
		}
	}
</style>
