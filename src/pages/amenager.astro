---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const articles = [
	{
		title: "Guide complet pour choisir votre fauteuil releveur",
		date: "13 janvier 2026",
		href: "/blog/choisir-son-fauteuil-reveleur",
		image: "https://cdn.prod.website-files.com/679ce3ae6891cff458859b15/69611dc675138a90cea7db4a_Fauteuil%20releveur.png"
	},
	{
		title: "Travaux pour seniors : Guide complet des aides financières après 60 ans",
		date: "7 novembre 2025",
		href: "/blog/travaux-pour-seniors",
		image: "https://cdn.prod.website-files.com/679ce3ae6891cff458859b15/68c413dbdccfb8696009c9a6_travaux%20sans%20emprunt-p-800.png"
	},
	{
		title: "Quelles aides pour adapter son logement à la retraite ? Guide complet 2025",
		date: "7 novembre 2025",
		href: "/blog/aides-amenagement-domicile",
		image: "https://cdn.prod.website-files.com/679ce3ae6891cff458859b15/688ccc7710c07a444ee47fcc_TGiDqfY4B_3h0hg3Abvs1tzFUfvx_v3qCIklu-Rip2g.png"
	},
	{
		title: "Résidence Senior vs EHPAD : Quel choix pour vos proches ?",
		date: "18 juillet 2025",
		href: "/blog/residence-senior-ou-ehpad",
		image: "https://cdn.prod.website-files.com/679ce3ae6891cff458859b15/6814e7b6177234efa3a729d2_680b9b0a78d8cc6f8e73c8a0_Senior%2520ephad.png"
	}
];
---

<Layout title="Aménager - Retraite Libre">
	<Header />
	<main>
		<!-- Hero Section -->
		<section class="page-hero">
			<div class="container">
				<h1>Aménager</h1>
				<p>Tous nos contenus pour aménager votre retraite</p>
			</div>
		</section>

		<!-- Articles Grid -->
		<section class="articles-section">
			<div class="container">
				<div class="articles-grid">
					{articles.map(article => (
						<a href={article.href} class="article-card">
							<div class="article-image">
								<img src={article.image} alt={article.title} />
							</div>
							<div class="article-content">
								<span class="article-date">{article.date}</span>
								<h3>{article.title}</h3>
								<span class="article-link">Lire l'article →</span>
							</div>
						</a>
					))}
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.page-hero {
		background: var(--bg-light);
		padding: 60px 0;
		text-align: center;
	}

	.page-hero h1 {
		font-size: 42px;
		margin-bottom: 15px;
		color: var(--text-dark);
	}

	.page-hero p {
		font-size: 18px;
		color: var(--text-light);
	}

	.articles-section {
		padding: 60px 0;
		background: var(--bg-white);
	}

	.articles-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 30px;
	}

	.article-card {
		background: var(--bg-white);
		border-radius: 16px;
		overflow: hidden;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
		transition: all 0.3s ease;
	}

	.article-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
	}

	.article-image {
		height: 200px;
		overflow: hidden;
	}

	.article-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.article-card:hover .article-image img {
		transform: scale(1.05);
	}

	.article-content {
		padding: 25px;
	}

	.article-date {
		font-size: 13px;
		color: var(--text-light);
		margin-bottom: 10px;
		display: block;
	}

	.article-content h3 {
		font-size: 18px;
		margin-bottom: 15px;
		line-height: 1.4;
		color: var(--text-dark);
	}

	.article-link {
		color: var(--primary-blue);
		font-weight: 600;
		font-size: 14px;
	}

	@media (max-width: 992px) {
		.articles-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 576px) {
		.articles-grid {
			grid-template-columns: 1fr;
		}

		.page-hero h1 {
			font-size: 32px;
		}
	}
</style>
